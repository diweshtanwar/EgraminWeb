@model EgraminWeb.Models.tblEnquiry
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="downloads py-5">
    <div class="container">
        <div class="title mb-3">
            <h3> Contact <span> Us</span></h3>
        </div>
   
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h5 class=""><strong> Enquiry Form</strong></h5>
                    <p>Please fill the below form for any information. We will get back to you shortly.</p>
                    <div class="form-group">
                        <label class="required-field">Name</label>
                        @Html.EditorFor(model => model.NewName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name" } })
                       
                            @Html.ValidationMessageFor(model => model.NewName, "", new { @class = "text-danger" })
                        
                        </div>
                    <div class="form-group">
                        <label class="required-field">Email</label>
                        @Html.EditorFor(model => model.NewEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Email" } })
                        
                            @Html.ValidationMessageFor(model => model.NewEmail, "", new { @class = "text-danger" })
                       
                    </div>
                    <div class="form-group">
                        <label class="required-field">Mobile No.</label>
                        @Html.EditorFor(model => model.NewMobile, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Mobile no." } })
                    
                            @Html.ValidationMessageFor(model => model.NewMobile, "", new { @class = "text-danger" })
                      
                    </div>
                    <div class="form-group">
                        <label class="required-field">Message</label>
                        @Html.EditorFor(model => model.NewMessage, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Message" } })
                       
                            @Html.ValidationMessageFor(model => model.NewMessage, "", new { @class = "text-danger" })
                    
                    </div>
                        <div class="form-group">                          
                            <button class="btn btn-warning px-4 text-white" type="submit">Submit</button>
                        </div>

                        }
                    </div>
            <div class="col-md-6">
                <h5 class=""><strong> Reach Us</strong></h5>
                <p>You can also reach us through below given means.</p>
                <div class="d-flex mb-3">
                    <span class="mr-2"><i class="fa fa-home"></i></span>
                    <span>e-Gramin Services Pvt. Ltd <br />House No. 39, Sapta Swahid Path <br />Dispur, Guwahati - 781006<br />Assam, India</span>
                  
                </div>
              
                <div class="d-flex mb-3">
                    <span class="mr-2"><i class="fa fa-envelope"></i></span>
                    <span>helpdesk.egramin@gmail.com</span>
                </div>
                <div class="d-flex mb-3">
                    <span class="mr-2"><i class="fa fa-phone"></i></span>
                    <span>0361-3511441</span>
                </div>
